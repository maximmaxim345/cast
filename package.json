{
  "name": "sendspin-over-cast",
  "version": "0.1.0",
  "type": "module",
  "description": "Chromecast receiver for Music Assistant using the Sendspin protocol",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ignore-path .gitignore",
    "prettier:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@music-assistant/sendspin-js": "^2.0.0"
  },
  "devDependencies": {
    "@types/chromecast-caf-receiver": "^6.0.25",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "7.0.0",
    "@typescript-eslint/parser": "7.0.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "3.7.4",
    "typescript": "5.9.3",
    "vite": "^7.3.1"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  }
}
